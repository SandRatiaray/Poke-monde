{% extends 'base.html.twig' %}

{% block title %}Boutique Pokemonde{% endblock %}

{% block body %}

        {# Boutique #}
        <section class="py-5">
            <div class="text-center">
                <a class="btn btn-success btn-sm" href="/produit">Ajouter un nouveau produit +</a>
            </div>
            <h1 class="text-center">Vous êtes sur la boutique</h1>
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    {% for produit in produits%}
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">{{produit.stock}} en stock</div>
                            <!-- Product image-->
                            <img class="card-img-top" src={{ produit.image ? produit.image : "https://dummyimage.com/450x300/dee2e6/6c757d.jpg" }} alt={{produit.nameslug}} />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{produit.name}}</h5>
                                    <!-- Product reviews-->
                                    {# <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div> #}
                                    <!-- Product price-->
                                    <span class="text-muted text-decoration-line-through">{{produit.price}}.00 €</span>
                                    <b>Gratuit</b> 
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    {# <a class="btn btn-success mt-auto" href="/produit/view/{{produit.id}}">Voir le produit</a>
                                    <a class="btn btn-outline-dark mt-auto" href="/produit/edit/{{produit.id}}">Modifier le produit</a> #}
                                    <a class="btn btn-success mt-auto" href="/produit/view/{{produit.id}}"> <i class="bi bi-eye"></i></a>
                                    <a class="btn btn-warning mt-auto" href="/produit/edit/{{produit.id}}"><i class="bi bi-pencil"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>
        </section>
{% endblock %}

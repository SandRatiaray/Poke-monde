{% extends 'base.html.twig' %}

{% block title %}Les animaux - charityPets{% endblock %}

{% block body %}
    <section class="py-5">
    <div class="text-center">
        <h1 class="text-center">Bienvenue sur la liste de nos animaux</h1>
        <img src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQZgGx3ttLLuaCgllV7W8KsSGrJD1pvGTlWYg&usqp=CAU' style="height: 150px;" class=' img-fluid ' >
    </div>
      <div class="container px-4 px-lg-5 mt-5">
        <h4 class="text-center">Voici {{ animals|length }} animaux disponibles </h4>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for animal in animals %}
            <div class="card m-3 col-md-3">
                <img src="{{ animal.image }}" class="card-img-top img-fluid" style="height: 390px; width: 280px;" alt="{{ animal.name }}">
                <div class="card-body">
                    <h5 class="card-title text-center">{{ animal.name|upper }}</h5>
                    <p class="card-text">Un {{ animal.name}} tr√®s gentil de type {{ animal.type}} </p>
                    <a href="animal?id={{ animal.id }}" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    </section>{% endblock %}